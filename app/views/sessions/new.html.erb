<% if @message %>
<%= @message %>
<% end %>

<div class="container center-block">
<%= form_for @user, :url => url_for(:controller => 'sessions', :action => 'create') do |f| %>
  <%= f.label :name%><br>
  <%= f.text_field :name %><br>
  <%= f.label :password %><br>
  <%= f.password_field :password, id: 'password'%><br>
  <%= f.submit 'Sign In' %>
<% end %>
</div>
