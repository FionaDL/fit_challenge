
 <%= render 'bar' %>

<% if @challenge.errors.any? %>
 <div id="error_explanation">
   <h2>
     <%= pluralize(@challenge.errors.count, "error") %>
     prohibited this challenge from being created:
   </h2>

   <ul>
   <% @challenge.errors.full_messages.each do |message| %>
     <li><%= message %></li>
   <% end %>
   </ul>
 </div>
<% end %>

<div class = 'container_form'>
<%= form_for(@challenge, html: {class: 'form-group'}) do |f|%>
  <%= f.hidden_field :user_id, value: @user.id %>
  <div class="field form-group">
  <%= f.label :name %>
    <div class="col-sm-10">
  <%= f.text_field :name %>
</div>
</div>
  <div class="field form-group">
  <%= f.label :start_date %>
    <div class="col-sm-10">
  <%= f.date_field :start_date %>
</div>
</div>
  <div class="field form-group">
  <%= f.label :end_date %>
    <div class="col-sm-10">
  <%= f.date_field :end_date %>
</div>
</div>
  <div class="field form-group">
  <%= f.label :workouts_needed %>
    <div class="col-sm-10">
  <%= f.text_field :workouts_needed %>
</div>
</div>
  <div class="field form-group">
  <%= f.label :reward %>
    <div class="col-sm-10">
  <%= f.text_field :reward%>
</div>
</div>
  <div class="field form-group">
  <%= f.label :notes %>
    <div class="col-sm-10">
  <%= f.text_field :notes%>
</div>
</div>
  <div class="action form-group">
  <%= f.submit "Create Challenge" %>
  </div>
<% end %>
</div>
