<label> Name: </label>
<%= @user.name %><br>
<label> Height: </label>
<%= @user.height %><br>
<label> Weight: </label>
<%= @user.weight %><br>
<label> Quote: </label>
<%= @user.quote %><br>

<% if @current_challenges || @expired_challenges %>
  <label> Current Challenges: </label>
    <%= @current_challenges.each do |challenge| %>
      <%=challenge.name%>
      <%= link_to "Challenge", user_challenge_path(challenge)%>
    <%end%>
    <label> Expired Challenges: </label>
      <%= @expired_challenges.each do |challenge| %>
        <%=challenge.name%>
        <%= link_to "Challenge", user_challenge_path(challenge)%>
      <%end%>
<%end%>


<%= link_to "Create a New Challenge", new_user_challenge_path(@user) %>
