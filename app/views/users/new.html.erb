<% if @user.errors.any? %>
  <div id="error_explanation">
    <h3>
      <%= pluralize(@user.errors.count, "error") %>
      prohibited this user from being created:
    </h3>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<h3> User Information </h3><br>
<div class = 'container_form'>
<%= form_for(@user, html: {class: 'form-group'}) do |f|%>
 <div class="field form-group">
  <%= f.label :name %><br>
  <div class="col-sm-10">
  <%= f.text_field :name %><br>
</div>
</div>
<div class="field form-group">
  <%= f.label :password %><br>
    <div class="col-sm-10">
  <%= f.text_field :password %><br>
</div>
</div>
<div class="field form-group">
  <%= f.label :password_confirmation %><br>
    <div class="col-sm-10">
  <%= f.text_field :password_confirmation %><br>
</div>
</div>
<div class="field form-group">
  <%= f.label :weight %><br>
    <div class="col-sm-10">
  <%= f.number_field :weight %><br>
</div>
</div>
<div class="field form-group">
  <%= f.label :height, "Height (enter in inches)" %><br>
    <div class="col-sm-10">
  <%= f.number_field :height%><br>
</div>
</div>
<div class="field form-group">
  <%= f.label :quote %><br>
    <div class="col-sm-10">
  <%= f.text_area :quote%><br>
</div>
</div>
<div class="action form-group">
  <%= f.submit "Sign Up" %>
  </div>
<% end %>
</div>
