<% if @user.errors.any? %>
  <div id="error_explanation">
    <h3>
      <%= pluralize(@user.errors.count, "error") %>
      prohibited this user from being created:
    </h3>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class= "form_container">
<%= form_for @user do |f|%>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :password %><br>
  <%= f.text_field :password %><br>
  <%= f.label :password_confirmation %><br>
  <%= f.text_field :password_confirmation %><br>
  <%= f.label :weight %><br>
  <%= f.number_field :weight %><br>
  <%= f.label :height %><br>
  <%= f.number_field :height%><br>
  <%= f.label :quote %><br>
  <%= f.text_area :quote%><br>
  <%= f.submit "Sign Up" %>
<% end %>
</div>
