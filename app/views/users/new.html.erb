<% if @message %>
<%= @message %>
<% end %>


<%= form_for @user do |f|%>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :password %>
  <%= f.text_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.text_field :password_confirmation %>
  <%= f.label :weight %>
  <%= f.number_field :weight %>
  <%= f.label :height %>
  <%= f.number_field :height%>
  <%= f.label :quote %>
  <%= f.text_area :quote%>
  <%= f.submit "Sign Up" %>
<% end %>
