<%= render "bar" %>


<h3> Please Enter the following information to finish setting up your account. </h3><br>
<div class = 'container_form'>
  <%= form_for(@user, html: {class: 'form-group'}) do |f|%>
    <%= f.hidden_field :user_id, value: @user.id %>
    <div class="field form-group">
      <%= f.label :name %><br>
        <div class="col-sm-10">
          <%= f.text_field :name %><br>
        </div>
    </div>
    <div class="field form-group">
      <%= f.label :weight %><br>
        <div class="col-sm-10">
          <%= f.number_field :weight %><br>
        </div>
    </div>
    <div class="field form-group">
      <%= f.label :height %><br>
        <div class="col-sm-10">
          <%= f.number_field :height%><br>
      </div>
    </div>
    <div class="field form-group">
      <%= f.label :quote %><br>
        <div class="col-sm-10">
          <%= f.text_area :quote%><br>
        </div>
    </div>
    <div class="action form-group">
      <%= f.submit "Sign Up" %>
    </div>
  <% end %>
</div>
